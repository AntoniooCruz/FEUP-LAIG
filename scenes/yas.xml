<yas>
    <scene root="room" axis_length="10.0"/>
 
    <views default="camera-perspective-0">
       <perspective id="camera-perspective-0" near="0.5" far="300" angle="30">
            <from x="20.0" y="20.0" z="20.0"/>
            <to x="0.0" y="0.0" z="0.0"/>
        </perspective>
 
        <ortho id="camera-ortho-0" near="0.5" far ="100"
                          left="1" right="3" top="1" bottom="7"/>
    </views>
 
    <ambient>
        <ambient r="0.3" g="0.3" b="0.3" a="1.0"/>
        <background r="0.3" g="0.4" b="0.6" a="1.0"/>
    </ambient>
 
    <lights>
        <omni id="omni-light-0" enabled="1">
            <location x="0" y="0" z="0" w="0"/>
            <ambient r="0.5" g="0.5" b="0-3" a="1"/>
            <diffuse r="0" g="0" b="0" a="0"/>
            <specular r="0" g="0" b="0" a="0"/>
        </omni>
 
        <spot id="spot-light-1" enabled ="1" angle="0" exponent="15">
            <location x="1" y="1" z="1" w="0" />
            <target x="4" y="4" z="4" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0" />
        </spot>
    </lights>
 
    <textures>
        <texture id="tex-wall" file="images/wall.jpg"/>
        <texture id="tex-floor" file="images/floor.jpg"/>
        <texture id="tex-vidral" file="images/vidral.jpg"/>
        <texture id="tex-door" file="images/door.jpg"/>
        <texture id="tex-green" file="images/green.jpg"/>
        <texture id="tex-metalKnob" file="images/metal-knob.jpg"/>
        <texture id="tex-exitSign" file="images/exitSign.jpg"/>
        <texture id="tex-painting" file="images/painting1.jpg"/>
        <texture id="tex-wood" file="images/wood.jpg"/>
    </textures>
 
    <materials>
        <material id="material-1" shininess = "10.0" >
            <emission r="0.5" g="0.5" b="0" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
        </material>

        <material id="material-2" shininess = "10" >
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="0.6" g="0.4" b="0.6" a="1" />
            <diffuse r="0.3" g="0.2" b="0.5" a="1" />
            <specular r="0.1" g="0.225" b="0.3" a="1" />
        </material>
    </materials>
 
    <transformations>
    
        <transformation id="rotateSide2">
            <translate x="0" y="0" z="0"/>
            <rotate axis="y" angle="-90"/>
            <scale x="1" y="1" z="1"/>
        </transformation>

        <transformation id="rotateSide3">
            <translate x="0" y="0" z="0"/>
            <rotate axis="x" angle="90"/>
            <scale x="1" y="1" z="1"/>
        </transformation>

        <transformation id="doorKnob">
            <translate x="0.3" y="2" z="0"/>
            <rotate axis="x" angle="0"/>
            <scale x="0.1" y="0.1" z="0.1"/>
        </transformation>

        <transformation id="woodDoor">
            <translate x="0" y="0" z="0"/>
            <rotate axis="y" angle="0"/>
            <scale x="2" y="4" z="1"/>
        </transformation>

        <transformation id="doorSign">
            <translate x="0" y="4.2" z="0"/>
            <rotate axis="y" angle="0"/>
            <scale x="2" y="0.8" z="0.1"/>
        </transformation>

         <transformation id="doorT">
            <translate x="7" y="0" z="0.05"/>
            <rotate axis="y" angle="0"/>
            <scale x="1" y="1" z="1"/>
        </transformation>

         <transformation id="paintingT">
            <translate x="0.05" y="3" z="7.8"/>
            <rotate axis="y" angle="90"/>
            <scale x="6" y="3" z="1"/>
        </transformation>

         <transformation id="scaleWalls">
            <translate x="0" y="0" z="0"/>
            <rotate axis="y" angle="0"/>
            <scale x="10" y="10" z="10"/>
        </transformation>

        <transformation id="leg2T">
            <translate x="3" y="0" z="0"/>
            <rotate axis="y" angle="0"/>
            <scale x="1" y="1" z="1"/>
        </transformation>

        <transformation id="leg3T">
            <translate x="3" y="0" z="3.5"/>
            <rotate axis="y" angle="0"/>
            <scale x="1" y="1" z="1"/>
        </transformation>

        <transformation id="leg4T">
            <translate x="0" y="0" z="3.5"/>
            <rotate axis="y" angle="0"/>
            <scale x="1" y="1" z="1"/>
        </transformation>

         <transformation id="topTableT">
            <translate x="1.5" y="2" z="2"/>
            <rotate axis="y" angle="0"/>
            <scale x="12" y="0.15" z="20"/>
        </transformation>
        
        <transformation id="tableT">
            <translate x="3.5" y="0" z="3.5"/>
            <rotate axis="y" angle="0"/>
            <scale x="1" y="1" z="1"/>
        </transformation>

    </transformations>
 
 
    <primitives>
        <primitive id="sphere">
          <sphere radius="1" slices="5000" stacks="10" />
        </primitive >
    </primitives >
 
    <components>
       
        <component id = "room">
            <transformation>
            </transformation>
 
            <materials>
                <material id="material-1"/>
            </materials>
 
            <texture id="tex-wall" length_s="1.0" length_t="1.0"/>
 
            <children>
                <componentref id="walls"/>
                <componentref id="door"/>
                <componentref id="painting"/>
                <componentref id="table"/>
            </children>
        </component>

        <component id = "walls">
            <transformation>
              <transformationref id="scaleWalls"/>
            </transformation>
 
            <materials>
                <material id="material-1"/>
            </materials>
 
            <texture id="tex-wall" length_s="1.0" length_t="1.0"/>
 
            <children>
                <componentref id="side1"/>
                <componentref id="side2"/>
                <componentref id="side3"/>
            </children>
        </component>

        <component id = "side1">
          <transformation>
          </transformation>

          <materials>
            <material id="material-1"/>
          </materials>

          <texture id="tex-wall" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="rectangle"/>
          </children>
       </component>

        <component id = "side2">
          <transformation>
            <transformationref id="rotateSide2"/>
          </transformation>

          <materials>
            <material id="material-1"/>
          </materials>

          <texture id="tex-wall" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="rectangle"/>
          </children>
       </component>

       <component id = "side3">
          <transformation>
            <transformationref id="rotateSide3"/>
          </transformation>

          <materials>
            <material id="material-1"/>
          </materials>

          <texture id="tex-floor" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="rectangle"/>
          </children>
       </component>

       <component id = "door">
          <transformation>
             <transformationref id="doorT"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-vidral" length_s="1.0" length_t="1.0"/>

          <children>
            <componentref id="doorKnob"/>
            <componentref id="doorWood"/>
            <componentref id="doorSign"/>
          </children>
       </component>

       <component id = "doorKnob">
          <transformation>
             <transformationref id="doorKnob"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-metalKnob" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="sphere"/>
          </children>
       </component>

       <component id = "doorWood">
          <transformation>
            <transformationref id="woodDoor"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-door" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="rectangle"/>
          </children>
       </component>

       <component id = "doorSign">
          <transformation>
            <transformationref id="doorSign"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-exitSign" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="rectangle"/>
          </children>
       </component>

        <component id = "table">
            <transformation>
              <transformationref id="tableT"/>
            </transformation>
 
            <materials>
                <material id="material-1"/>
            </materials>
 
            <texture id="tex-wall" length_s="1.0" length_t="1.0"/>
 
            <children>
                <componentref id="leg1"/>
                <componentref id="leg2"/>
                <componentref id="leg3"/>
                <componentref id="leg4"/>
                <componentref id="top"/>
            </children>
        </component>

        <component id = "top">
          <transformation>
            <transformationref id="topTableT"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-green" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="cylinder"/>
          </children>
       </component>

         <component id = "leg1">
          <transformation>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-wall" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="cylinder"/>
          </children>
       </component>

       <component id = "leg2">
          <transformation>
            <transformationref id="leg2T"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-wall" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="cylinder"/>
          </children>
       </component>

       <component id = "leg3">
          <transformation>
            <transformationref id="leg3T"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-wall" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="cylinder"/>
          </children>
       </component>
       

        <component id = "leg4">
          <transformation>
            <transformationref id="leg4T"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-wall" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="cylinder"/>
          </children>
       </component>

        <component id = "painting">
          <transformation>
            <transformationref id="paintingT"/>
          </transformation>

          <materials>
            <material id="material-2"/>
          </materials>

          <texture id="tex-painting" length_s="1.0" length_t="1.0"/>

          <children>
            <primitiveref id="rectangle"/>
          </children>
       </component>

    </components>
</yas>