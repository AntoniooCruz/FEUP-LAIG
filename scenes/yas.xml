<yas>
    <scene root="triangulo_movido" axis_length="10.0"/>
 
    <views default="camera-perspective-0">
        <perspective id = "camera-perspective-0" near="100" angle="30">
            <from x="4" y="0" z="4"/>
            <to x="10" y="5" z="10"/>
        </perspective>
 
        <ortho id="camera-ortho-0" near="0" far ="10"
                          left="4" right="4" top="6" bottom="0"/>
    </views>
 
    <ambient>
        <ambient r="0.3" g="0.3" b="0.3" a="1.0"/>
        <background r="0.1" g="0.1" b="0.1" a="1.0"/>
    </ambient>
 
    <lights>
        <omni id="omni-light-0" enabled="1">
            <location x="0" y="0" z="0" w="0"/>
            <ambient r="0.1" g="0" b="0" a="0"/>
            <diffuse r="0" g="0" b="0" a="0"/>
            <specular r="0" g="0" b="0" a="0"/>
        </omni>
 
        <spot id="spot-light-1" enabled ="1" angle="0" exponent="15">
            <location x="1" y="1" z="1" w="0" />
            <target x="4" y="4" z="4" />
            <ambient r="0" g="0" b="0" a="0" />
            <diffuse r="0" g="0" b="0" a="0" />
            <specular r="0" g="0" b="0" a="0" />
        </spot>
    </lights>
 
    <textures>
        <texture id="texture" file="file"/>
    </textures>
 
    <materials>
        <material id="material-1" shininess = "4" >
            <emission r="0" g="0" b="0" a="0" />
            <ambient r="0.125" g="0.4" b="0.375" a="1" />
            <diffuse r="0.3" g="0.6" b="0.5" a="1" />
            <specular r="0.1" g="0.225" b="0.3" a="1" />
        </material>
    </materials>
 
    <transformations>
        <transformation id="translateX">
            <translate x="2" y="0" z="0"/>
            <rotate axis="z" angle="0"/>
            <scale x="1" y="1" z="1"/>
        </transformation>
    </transformations>
 
 
    <primitives>
        <primitive id="triangle">
            <triangle x1="1" y1="0" z1="0"
                      x2="0" y2="1" z2="0"
                      x3="0" y3="0" z3="2" />
        </primitive >
    </primitives >
 
    <components>
       <component id = "triangulo_movido">
            <transformation>
                <transformationref id="translateX"/>
            </transformation>
 
            <materials>
                <material id="inherit"/>
            </materials>
 
            <texture id="none" lenght_s="3" length_t="1"/>
 
            <children>
                <primitiveref id="triangle"/>
            </children>
        </component>
    </components>
</yas>